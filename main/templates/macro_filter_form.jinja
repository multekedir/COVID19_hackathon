                    </div>

                    <div class="form-group col-md-2">
                        {{ form.body_temp_upper.label(class="form-control-label", style="font-size: 12px;") }}
                        {% if form.body_temp_upper.errors %}
                            {{ form.body_temp_upper(class="form-control form-control-sm is-invalid") }}
