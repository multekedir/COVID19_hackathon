                            <div class="invalid-feedback">
                                {% for error in form.how_long_upper.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.how_long_upper(class="form-control form-control-sm") }}
                            <small class="form-text text-muted">Max</small>
                        {% endif %}
                    </div>
                </div>
            </fieldset>
             <div class="form-group">
                {{ form.search(class="btn btn-outline-info") }}
            </div>
        </form>
{% endmacro %}