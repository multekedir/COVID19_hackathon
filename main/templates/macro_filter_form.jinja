                        {% endif %}
                    </div>
                    <div class="form-group col-md-2">
                        {{ form.difficulty_upper.label(class="form-control-label", style="font-size: 12px;") }}
                        {% if form.difficulty_upper.errors %}
                            {{ form.difficulty_upper(class="form-control form-control-sm is-invalid") }}
                            <small class="form-text text-muted">Max</small>
                            <div class="invalid-feedback">
                                {% for error in form.difficulty_upper.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.difficulty_upper(class="form-control form-control-sm") }}
