                    <div class="form-group col-md-2">
                        {{ form.difficulty_lower.label(class="form-control-label", style="font-size: 12px;") }}
                        {% if form.difficulty_lower.errors %}
                            {{ form.difficulty_lower(class="form-control form-control-sm is-invalid") }}
